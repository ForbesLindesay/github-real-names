{
  "name": "GitHub Real Names",
  "description": "Use real names on GitHub",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "version": "1.3.1",
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Toggle using real GitHub real names"
  },
  "content_scripts" : [
    {
      "matches" : [
         "https://github.com/*"
      ],
      "js" : [ "contentscript.js" ],
      "run_at" : "document_idle",
      "all_frames" : false
    }
  ],
  "manifest_version": 2
}
